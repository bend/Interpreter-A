        Runnable r = new Runnable(){
            public void run(){
                while(true){
                    try {
                        checkMem();
                        Thread.sleep(500);
                    } catch (InterruptedException ex) {
                    }
                }
            }

        };
        new Thread(r).start();
    }

    private void checkMem(){
        Runtime runtime = Runtime.getRuntime();

    NumberFormat format = NumberFormat.getInstance();

    StringBuilder sb = new StringBuilder();
    long maxMemory = runtime.maxMemory();
    long allocatedMemory = runtime.totalMemory();
    long freeMemory = runtime.freeMemory();
    memoryTable.setValueAt("free memory", 0, 0);
    memoryTable.setValueAt("allocated memory", 1, 0);
    memoryTable.setValueAt("max memory", 2, 0);
    memoryTable.setValueAt("total free memory", 3, 0);

    memoryTable.setValueAt(format.format(freeMemory / 1024),0 , 1);
    memoryTable.setValueAt(format.format(allocatedMemory / 1024), 1, 1);
    memoryTable.setValueAt(format.format(maxMemory / 1024), 2, 1);
    memoryTable.setValueAt(format.format((freeMemory + (maxMemory - allocatedMemory)) / 1024), 3, 1);
    }

